#! /usr/bin/bash
set -e # stop if it fails at any point

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-setup"
printf "${CYAN}==== ${LABEL}${NO_COLOR}\n"

ABS_PATH=$(readlink -f "$0")
DB_PATH=$(dirname $ABS_PATH)
BIN_PATH=$(dirname $DB_PATH)
BACKEND_PATH=$(dirname $BIN_PATH)
PROJECT_PATH=$(dirname $BACKEND_PATH)
BACKEND_FLASK_PATH="$PROJECT_PATH/backend-flask"
bin_path="$PROJECT_PATH/bin/backend"
echo "BACKEND_FLASK_PATH: $BACKEND_FLASK_PATH"

source "$bin_path/db/drop"
sleep 1
source "$bin_path/db/create"
sleep 1
source "$bin_path/db/schema-load"
sleep 1
source "$bin_path/db/seed"
sleep 1
python "$bin_path/cognito/update_cognito_user_ids"
#sleep 1
#python "$DB_PATH//migrate"